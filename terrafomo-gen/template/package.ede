_include: !include '../../share/package.yaml'

name: {{ package }}

<<: *common
<<: *version
<<: *options
<<: *extensions

dependencies:
  - base
  - hashable
  - microlens
  - terrafomo
  - text
{% for dep in provider.dependencies %}
  - {{ dep.value }}
{% endfor %}

library:
  source-dirs:
    - src
    - gen

  exposed-modules:
{% for module in exposed %}
    - {{ module.value }}
{% endfor %}

  reexported-modules: >
    terrafomo:Terrafomo,
    terrafomo:Terrafomo.Format
